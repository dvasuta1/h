{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescr__",
    "short_name": "__MSG_extName__",
    "version": "0.1.8.2",
    "manifest_version": 2,
    "minimum_chrome_version": "42", 
    "default_locale": "en", 
    "icons": {
        "16": "img/ext_icons/heppart_logo_16.png",
        "48": "img/ext_icons/heppart_logo_48.png",
        "128": "img/ext_icons/heppart_logo_128.png"
    },

    "page_action": {
        "default_icon": {
            "19": "img/ext_icons/ic_bus_articulated_front_black_18dp.png",
            "38": "img/ext_icons/ic_bus_articulated_front_black_48dp.png"
        },
        "default_title": "__MSG_extName__",
        "chrome_style": true
    },

    "background": {
        "scripts": ["js/ga.js", "js/storage.js", "js/background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [
                "https://*.copart.com/*"
            ],
            "css": [
                "css/content_script.css"
            ],
            "js": [
                "js/ga.js",
                "js/jquery.min.js",
                "js/underscore-min.js",
                "lib/date.format.js",
                "js/translations.js",
                "js/content_script.js"
            ]
        }
    ],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "web_accessible_resources": [
      "img/*"
    ],  
    "permissions": [
        "https://*.copart.com/*",
        "activeTab",
        "storage",
        "tabs",
        "notifications",
        "contextMenus"
    ]
}