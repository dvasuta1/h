{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescr__",
    "short_name": "__MSG_extName__",
    "version": "0.1.7.1",
    "manifest_version": 2,
    "default_locale": "en",
    "icons": {
        "16": "img/ext_icons/heppart_logo_16.png",
        "48": "img/ext_icons/heppart_logo_48.png",
        "96": "img/ext_icons/heppart_logo_96.png"
    },
    "applications": {
        "gecko": {
            "id": "dvasuta@yandex.ru",
            "strict_min_version": "42.0"
        }
    },
    "browser_action": {
        "default_icon": {
            "19": "img/ext_icons/ic_bus_articulated_front_black_18dp.png",
            "38": "img/ext_icons/ic_bus_articulated_front_black_48dp.png"
        },
        "default_title": "__MSG_extName__",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "js/storage.js",
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.copart.com/*"
            ],
            "css": [
                "css/content_script.css"
            ],
            "js": [
                "js/jquery.min.js",
                "js/underscore-min.js",
                "lib/date.format.js",
                "js/translations.js",
                "js/content_script.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "web_accessible_resources": [
        "img/*"
    ],
    "permissions": [
        "https://www.copart.com/*",
        "activeTab",
        "storage",
        "tabs",
        "notifications"
    ]
}